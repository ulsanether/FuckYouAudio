<Application x:Class="FuckAuido.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 커스텀 색상 오버라이드 -->
            <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FF18181B"/>
            <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="#FF27272A"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

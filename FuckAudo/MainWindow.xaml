<Window
    x:Class="FuckAuido.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    Title="FuckAudo - 볼륨 조절"
    Width="380"
    Height="480"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="av">

    <!--  시스템 트레이 아이콘  -->
    <Window.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem x:Name="InformationMenuItem" Header="정보">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Information" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem x:Name="SettingsMenuItem" Header="설정">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Settings" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem x:Name="CloseMenuItem" Header="종료">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Close" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.Resources>

    <Grid>
        <!--  트레이 아이콘  -->
        <tb:TaskbarIcon
            x:Name="TrayTaskbarIcon"
            ContextMenu="{StaticResource TrayMenu}"
            ToolTipText="FuckAudo - 볼륨 조절" />

        <!--  메인 카드  -->
        <materialDesign:Card
            Margin="10"
            materialDesign:ElevationAssist.Elevation="Dp8"
            UniformCornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  헤더  -->
                <materialDesign:ColorZone
                    Grid.Row="0"
                    Padding="16,12"
                    CornerRadius="12,12,0,0"
                    Mode="PrimaryMid">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  탭 버튼  -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button
                                x:Name="VolumeTabButton"
                                Margin="0,0,8,0"
                                Padding="12,4"
                                Click="VolumeTab_Click"
                                Content="볼륨"
                                Foreground="White"
                                Opacity="1.0"
                                Style="{StaticResource MaterialDesignFlatButton}" />
                            <Button
                                x:Name="SettingsTabButton"
                                Padding="12,4"
                                Click="SettingsTab_Click"
                                Content="설정"
                                Foreground="White"
                                Opacity="0.6"
                                Style="{StaticResource MaterialDesignFlatButton}" />
                        </StackPanel>

                        <!--  트레이로 최소화 버튼  -->
                        <Button
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Padding="0"
                            Click="ButtonTray_Click"
                            Content="─"
                            FontSize="16"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="트레이로 최소화" />
                    </Grid>
                </materialDesign:ColorZone>

                <!--  콘텐츠 영역  -->
                <Grid Grid.Row="1">
                    <!--  볼륨 조절 패널  -->
                    <StackPanel x:Name="VolumePanel" Margin="24">
                        <!--  볼륨 아이콘 및 값  -->
                        <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                x:Name="VolumeIcon"
                                Width="64"
                                Height="64"
                                Margin="0,0,0,12"
                                HorizontalAlignment="Center"
                                Foreground="{DynamicResource PrimaryHueMidBrush}"
                                Kind="VolumeHigh" />
                            <TextBlock
                                x:Name="VolumeText"
                                HorizontalAlignment="Center"
                                FontSize="48"
                                FontWeight="Bold"
                                Foreground="{DynamicResource PrimaryHueMidBrush}"
                                Text="70" />
                        </StackPanel>

                        <!--  볼륨 슬라이더  -->
                        <Slider
                            x:Name="VolumeSlider"
                            Margin="0,0,0,20"
                            IsSnapToTickEnabled="True"
                            Maximum="100"
                            Minimum="0"
                            TickFrequency="1"
                            ValueChanged="VolumeSlider_ValueChanged"
                            Value="70" />

                        <!--  음소거 버튼  -->
                        <Button
                            x:Name="MuteButton"
                            Height="48"
                            Margin="0,0,0,20"
                            Click="MuteButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Kind="VolumeMute" />
                                <TextBlock VerticalAlignment="Center" Text="음소거 토글 아 귀찮다" />
                            </StackPanel>
                        </Button>

                        <!--  출력 장치 선택  -->
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Opacity="0.7"
                                Text="출력 장치" />
                            <ComboBox
                                x:Name="DeviceComboBox"
                                materialDesign:HintAssist.Hint="장치 선택"
                                SelectionChanged="DeviceComboBox_SelectionChanged" />
                        </StackPanel>
                    </StackPanel>

                    <!--  설정 패널  -->
                    <StackPanel
                        x:Name="SettingsPanel"
                        Margin="24"
                        Visibility="Collapsed">

                        <!--  설정 제목  -->
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Text="설정" />

                        <!--  시작 프로그램 등록  -->
                        <CheckBox
                            x:Name="AutoStartCheckBox"
                            Margin="0,0,0,16"
                            Content="Windows 시작 시 자동 실행" />

                        <!--  알림 설정  -->
                        <CheckBox
                            x:Name="NotificationCheckBox"
                            Margin="0,0,0,16"
                            Content="볼륨 변경 알림 표시"
                            IsChecked="False" />

                        <!--  트레이에 최소화  -->
                        <CheckBox
                            x:Name="MinimizeToTrayCheckBox"
                            Margin="0,0,0,24"
                            Content="닫기 버튼 클릭 시 트레이로 최소화"
                            IsChecked="True" />

                        <!--  단축키 안내  -->
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock
                                Margin="0,0,0,12"
                                FontSize="16"
                                FontWeight="Medium"
                                Text="단축키" />

                            <!--  미디어 키  -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <materialDesign:Chip
                                    Grid.Column="0"
                                    Margin="0,0,12,0"
                                    Content="미디어 키" />
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Opacity="0.7"
                                    Text="볼륨 조절" />
                            </Grid>

                            <!--  더블클릭  -->
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <materialDesign:Chip
                                    Grid.Column="0"
                                    Margin="0,0,12,0"
                                    Content="더블클릭" />
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Opacity="0.7"
                                    Text="트레이 아이콘으로 창 표시" />
                            </Grid>
                        </StackPanel>

                        <!--  버전 정보  -->
                        <TextBlock
                            Margin="0,24,0,0"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Opacity="0.5"
                            Text="FuckAudo v1.0.0" />
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
